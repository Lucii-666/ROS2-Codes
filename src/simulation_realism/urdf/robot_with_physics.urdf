<?xml version="1.0"?>
<robot name="tuned_robot" xmlns:xacro="http://www.ros.org/wiki/xacro">
  
  <!-- ========================================= -->
  <!-- PHYSICS TUNING PARAMETERS                 -->
  <!-- ========================================= -->
  
  <!-- Robot physical properties -->
  <xacro:property name="base_mass" value="15.0"/>  <!-- kg - realistic mobile robot mass -->
  <xacro:property name="base_length" value="0.5"/>  <!-- meters -->
  <xacro:property name="base_width" value="0.4"/>
  <xacro:property name="base_height" value="0.2"/>
  
  <xacro:property name="wheel_mass" value="0.8"/>  <!-- kg per wheel -->
  <xacro:property name="wheel_radius" value="0.1"/>  <!-- meters -->
  <xacro:property name="wheel_width" value="0.05"/>
  
  <!-- Contact dynamics parameters -->
  <xacro:property name="mu1" value="0.8"/>  <!-- Friction coefficient 1 -->
  <xacro:property name="mu2" value="0.8"/>  <!-- Friction coefficient 2 -->
  <xacro:property name="kp" value="1e6"/>  <!-- Contact stiffness (N/m) -->
  <xacro:property name="kd" value="1e3"/>  <!-- Contact damping (N*s/m) -->
  <xacro:property name="min_depth" value="0.001"/>  <!-- Minimum contact depth -->
  <xacro:property name="max_vel" value="0.01"/>  <!-- Maximum contact velocity -->
  
  <!-- Sensor mount properties -->
  <xacro:property name="sensor_mount_mass" value="0.5"/>
  <xacro:property name="sensor_mount_height" value="0.15"/>
  
  <!-- ========================================= -->
  <!-- MATERIAL DEFINITIONS                      -->
  <!-- ========================================= -->
  
  <material name="blue">
    <color rgba="0.2 0.2 0.8 1.0"/>
  </material>
  
  <material name="black">
    <color rgba="0.1 0.1 0.1 1.0"/>
  </material>
  
  <material name="gray">
    <color rgba="0.5 0.5 0.5 1.0"/>
  </material>
  
  <!-- ========================================= -->
  <!-- BASE LINK - Main robot body               -->
  <!-- ========================================= -->
  
  <link name="base_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="${base_length} ${base_width} ${base_height}"/>
      </geometry>
      <material name="blue"/>
    </visual>
    
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="${base_length} ${base_width} ${base_height}"/>
      </geometry>
    </collision>
    
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="${base_mass}"/>
      <!-- Realistic inertia tensor for a box -->
      <inertia 
        ixx="${(1/12) * base_mass * (base_width*base_width + base_height*base_height)}"
        iyy="${(1/12) * base_mass * (base_length*base_length + base_height*base_height)}"
        izz="${(1/12) * base_mass * (base_length*base_length + base_width*base_width)}"
        ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>
  
  <!-- Gazebo properties for base_link -->
  <gazebo reference="base_link">
    <material>Gazebo/Blue</material>
    <mu1>${mu1}</mu1>
    <mu2>${mu2}</mu2>
    <kp>${kp}</kp>
    <kd>${kd}</kd>
    <minDepth>${min_depth}</minDepth>
    <maxVel>${max_vel}</maxVel>
  </gazebo>
  
  <!-- ========================================= -->
  <!-- WHEEL LINKS - Left and Right wheels       -->
  <!-- ========================================= -->
  
  <!-- LEFT WHEEL -->
  <link name="left_wheel">
    <visual>
      <origin xyz="0 0 0" rpy="${pi/2} 0 0"/>
      <geometry>
        <cylinder radius="${wheel_radius}" length="${wheel_width}"/>
      </geometry>
      <material name="black"/>
    </visual>
    
    <collision>
      <origin xyz="0 0 0" rpy="${pi/2} 0 0"/>
      <geometry>
        <cylinder radius="${wheel_radius}" length="${wheel_width}"/>
      </geometry>
    </collision>
    
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="${wheel_mass}"/>
      <!-- Inertia tensor for a cylinder rotating about its axis -->
      <inertia 
        ixx="${(1/12) * wheel_mass * (3*wheel_radius*wheel_radius + wheel_width*wheel_width)}"
        iyy="${(1/2) * wheel_mass * wheel_radius * wheel_radius}"
        izz="${(1/12) * wheel_mass * (3*wheel_radius*wheel_radius + wheel_width*wheel_width)}"
        ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>
  
  <joint name="left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel"/>
    <origin xyz="0 ${base_width/2 + wheel_width/2} ${-base_height/2}" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <dynamics damping="0.1" friction="0.1"/>
  </joint>
  
  <!-- Gazebo properties for left wheel - high friction for traction -->
  <gazebo reference="left_wheel">
    <material>Gazebo/Black</material>
    <mu1>1.2</mu1>  <!-- Higher friction for wheels -->
    <mu2>1.2</mu2>
    <kp>${kp}</kp>
    <kd>${kd}</kd>
    <minDepth>0.0005</minDepth>
  </gazebo>
  
  <!-- RIGHT WHEEL -->
  <link name="right_wheel">
    <visual>
      <origin xyz="0 0 0" rpy="${pi/2} 0 0"/>
      <geometry>
        <cylinder radius="${wheel_radius}" length="${wheel_width}"/>
      </geometry>
      <material name="black"/>
    </visual>
    
    <collision>
      <origin xyz="0 0 0" rpy="${pi/2} 0 0"/>
      <geometry>
        <cylinder radius="${wheel_radius}" length="${wheel_width}"/>
      </geometry>
    </collision>
    
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="${wheel_mass}"/>
      <inertia 
        ixx="${(1/12) * wheel_mass * (3*wheel_radius*wheel_radius + wheel_width*wheel_width)}"
        iyy="${(1/2) * wheel_mass * wheel_radius * wheel_radius}"
        izz="${(1/12) * wheel_mass * (3*wheel_radius*wheel_radius + wheel_width*wheel_width)}"
        ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>
  
  <joint name="right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="right_wheel"/>
    <origin xyz="0 ${-base_width/2 - wheel_width/2} ${-base_height/2}" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <dynamics damping="0.1" friction="0.1"/>
  </joint>
  
  <gazebo reference="right_wheel">
    <material>Gazebo/Black</material>
    <mu1>1.2</mu1>
    <mu2>1.2</mu2>
    <kp>${kp}</kp>
    <kd>${kd}</kd>
    <minDepth>0.0005</minDepth>
  </gazebo>
  
  <!-- ========================================= -->
  <!-- CASTER WHEEL - For stability              -->
  <!-- ========================================= -->
  
  <link name="caster_wheel">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <sphere radius="0.05"/>
      </geometry>
      <material name="gray"/>
    </visual>
    
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <sphere radius="0.05"/>
      </geometry>
    </collision>
    
    <inertial>
      <mass value="0.3"/>
      <inertia ixx="0.0003" iyy="0.0003" izz="0.0003" ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>
  
  <joint name="caster_wheel_joint" type="fixed">
    <parent link="base_link"/>
    <child link="caster_wheel"/>
    <origin xyz="${-base_length/2 + 0.05} 0 ${-base_height/2 - 0.05}" rpy="0 0 0"/>
  </joint>
  
  <gazebo reference="caster_wheel">
    <material>Gazebo/Gray</material>
    <mu1>0.05</mu1>  <!-- Low friction for easy sliding -->
    <mu2>0.05</mu2>
    <kp>${kp}</kp>
    <kd>${kd}</kd>
  </gazebo>
  
  <!-- ========================================= -->
  <!-- SENSOR MOUNT - For LiDAR, Camera, IMU     -->
  <!-- ========================================= -->
  
  <link name="sensor_mount">
    <visual>
      <origin xyz="0 0 ${sensor_mount_height/2}" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.1 ${sensor_mount_height}"/>
      </geometry>
      <material name="gray"/>
    </visual>
    
    <collision>
      <origin xyz="0 0 ${sensor_mount_height/2}" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.1 ${sensor_mount_height}"/>
      </geometry>
    </collision>
    
    <inertial>
      <origin xyz="0 0 ${sensor_mount_height/2}" rpy="0 0 0"/>
      <mass value="${sensor_mount_mass}"/>
      <inertia ixx="0.001" iyy="0.001" izz="0.0005" ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>
  
  <joint name="sensor_mount_joint" type="fixed">
    <parent link="base_link"/>
    <child link="sensor_mount"/>
    <origin xyz="0 0 ${base_height/2}" rpy="0 0 0"/>
  </joint>
  
  <gazebo reference="sensor_mount">
    <material>Gazebo/Gray</material>
  </gazebo>
  
  <!-- ========================================= -->
  <!-- LIDAR LINK                                -->
  <!-- ========================================= -->
  
  <link name="lidar_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.05" length="0.07"/>
      </geometry>
      <material name="black"/>
    </visual>
    
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.05" length="0.07"/>
      </geometry>
    </collision>
    
    <inertial>
      <mass value="0.2"/>
      <inertia ixx="0.0001" iyy="0.0001" izz="0.00005" ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>
  
  <joint name="lidar_joint" type="fixed">
    <parent link="sensor_mount"/>
    <child link="lidar_link"/>
    <origin xyz="0 0 ${sensor_mount_height + 0.035}" rpy="0 0 0"/>
  </joint>
  
  <!-- ========================================= -->
  <!-- CAMERA LINK                               -->
  <!-- ========================================= -->
  
  <link name="camera_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.03 0.08 0.03"/>
      </geometry>
      <material name="black"/>
    </visual>
    
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.03 0.08 0.03"/>
      </geometry>
    </collision>
    
    <inertial>
      <mass value="0.15"/>
      <inertia ixx="0.00001" iyy="0.00001" izz="0.00001" ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>
  
  <joint name="camera_joint" type="fixed">
    <parent link="sensor_mount"/>
    <child link="camera_link"/>
    <origin xyz="${base_length/4} 0 ${sensor_mount_height/2}" rpy="0 0 0"/>
  </joint>
  
  <!-- ========================================= -->
  <!-- IMU LINK                                  -->
  <!-- ========================================= -->
  
  <link name="imu_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.02 0.02 0.01"/>
      </geometry>
      <material name="blue"/>
    </visual>
    
    <inertial>
      <mass value="0.01"/>
      <inertia ixx="0.000001" iyy="0.000001" izz="0.000001" ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>
  
  <joint name="imu_joint" type="fixed">
    <parent link="base_link"/>
    <child link="imu_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>
  
</robot>
